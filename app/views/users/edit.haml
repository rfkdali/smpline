%h1=t('.title')

= form_for @user do |f|
  %p
    = f.label :name, t('.user_name')
    %br
    = f.text_field :name

  %p
    = f.label :email, t('.user_email')
    %br
    = f.email_field :email

  %p
    = f.submit t('.submit'), class: 'button small success radius'
    = link_to t('.cancel'), root_url


